{
    "injectionSelector": "L:text.html.markdown -string -meta.embedded -markup.inline.raw -markup.fenced_code",
    "patterns": [
        { "include": "#citation_list" },
        { "include": "#footnote_ref" },
        { "include": "#footnote_def" },
        { "include": "#colored_format_highlight" },
        { "include": "#format_highlight" },
        { "include": "#addition" },
        { "include": "#deletion" },
        { "include": "#substitution" },
        { "include": "#highlight" },
        { "include": "#comment_with_id" },
        { "include": "#comment" },
        { "include": "#comment_range_start" },
        { "include": "#comment_range_end" }
    ],
	"repository": {
		"addition": {
			"begin": "\\{\\+\\+",
			"end": "\\+\\+\\}",
			"name": "markup.inserted.scimark",
			"contentName": "markup.inserted"
		},
		"deletion": {
			"begin": "\\{--",
			"end": "--\\}",
			"name": "markup.deleted.scimark",
			"contentName": "markup.deleted"
		},
		"substitution": {
			"begin": "\\{\\~\\~",
			"end": "\\~\\~\\}",
			"name": "markup.changed.scimark",
			"contentName": "markup.deleted",
			"patterns": [
				{
					"begin": "~>",
					"beginCaptures": { "0": { "name": "punctuation.separator.scimark" } },
					"end": "(?=~~\\})",
					"contentName": "markup.inserted"
				}
			]
		},
		"comment_with_id": {
			"begin": "(\\{#)([a-zA-Z0-9_-]++)(>>)",
			"beginCaptures": {
				"1": { "name": "punctuation.definition.tag.begin.scimark" },
				"2": { "name": "entity.name.tag.scimark" },
				"3": { "name": "punctuation.definition.tag.begin.scimark" }
			},
			"end": "<<\\}",
			"endCaptures": {
				"0": { "name": "punctuation.definition.tag.end.scimark" }
			},
			"contentName": "meta.comment.scimark"
		},
		"comment": {
			"begin": "(\\{)(>>)",
			"beginCaptures": {
				"1": { "name": "punctuation.definition.tag.begin.scimark" },
				"2": { "name": "punctuation.definition.tag.begin.scimark" }
			},
			"end": "(<<)(\\})",
			"endCaptures": {
				"1": { "name": "punctuation.definition.tag.end.scimark" },
				"2": { "name": "punctuation.definition.tag.end.scimark" }
			},
			"name": "meta.comment.scimark",
			"contentName": "meta.comment"
		},
		"comment_range_start": {
			"match": "(\\{#)([a-zA-Z0-9_-]++)(\\})",
			"captures": {
				"1": { "name": "punctuation.definition.tag.begin.scimark" },
				"2": { "name": "entity.name.tag.scimark" },
				"3": { "name": "punctuation.definition.tag.end.scimark" }
			}
		},
		"comment_range_end": {
			"match": "(\\{/)([a-zA-Z0-9_-]++)(\\})",
			"captures": {
				"1": { "name": "punctuation.definition.tag.begin.scimark" },
				"2": { "name": "entity.name.tag.scimark" },
				"3": { "name": "punctuation.definition.tag.end.scimark" }
			}
		},
		"highlight": {
			"begin": "(\\{)(==)",
			"beginCaptures": {
				"1": { "name": "punctuation.definition.tag.begin.scimark" },
				"2": { "name": "punctuation.definition.tag.begin.scimark" }
			},
			"end": "(==)(\\})",
			"endCaptures": {
				"1": { "name": "punctuation.definition.tag.end.scimark" },
				"2": { "name": "punctuation.definition.tag.end.scimark" }
			},
			"name": "markup.bold.scimark",
			"contentName": "markup.bold"
		},
		"colored_format_highlight": {
			"match": "(?<!\\{)==([^}=]++)==\\{([a-z0-9](?:[a-z0-9-]*[a-z0-9])?)\\}",
			"name": "markup.highlight.colored.scimark",
			"captures": {
				"1": { "name": "markup.highlight" },
				"2": { "name": "entity.other.attribute-name.scimark" }
			}
		},
		"format_highlight": {
			"match": "(?<!\\{)==([^}=]++)==(?!\\})",
			"name": "markup.highlight.scimark",
			"captures": {
				"1": { "name": "markup.highlight" }
			}
		},
		"footnote_ref": {
			"match": "(\\[\\^)([a-zA-Z0-9_-]++)(\\])(?!:)",
			"captures": {
				"1": { "name": "punctuation.definition.footnote.begin.scimark" },
				"2": { "name": "entity.name.footnote.scimark" },
				"3": { "name": "punctuation.definition.footnote.end.scimark" }
			}
		},
		"footnote_def": {
			"match": "^(\\[\\^)([a-zA-Z0-9_-]++)(\\]:)",
			"captures": {
				"1": { "name": "punctuation.definition.footnote.begin.scimark" },
				"2": { "name": "entity.name.footnote.scimark" },
				"3": { "name": "punctuation.definition.footnote.end.scimark" }
			}
		},
		"citation_list": {
			"begin": "\\[(?=\\s*@)",
			"beginCaptures": {
				"0": { "name": "punctuation.definition.brackets.begin.scimark" }
			},
			"end": "\\]",
			"endCaptures": {
				"0": { "name": "punctuation.definition.brackets.end.scimark" }
			},
			"name": "meta.citation.scimark",
			"patterns": [
				{
					"match": "@[A-Za-z0-9_:-]++",
					"name": "support.function.citation.scimark"
				},
				{
					"match": ";",
					"name": "punctuation.separator.sequence.scimark"
				}
			]
		}
	},
    "scopeName": "scimark.injection"
}