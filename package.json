    "snippets": [
      {
        "language": "markdown",
        "path": "./snippets.json"
      }
    ],
    "languages": [
      {
        "id": "markdown",
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "path": "./syntaxes/scimark.json",
        "scopeName": "scimark.injection",
        "injectTo": [
          "text.html.markdown"
        ]
      }
    ],
    "markdown.previewStyles": [
      "./media/scimark.css"
    ],
    "markdown.previewScripts": [
      "./media/scimark-preview.js"
    ],
    "markdown.markdownItPlugins": true,
    "configuration": {
      "title": "Manuscript Markdown",
      "properties": {
        "scimark.includeAuthorNameInComments": {
          "type": "boolean",
          "default": true,
          "description": "Include author name in comment attribution"
        },
        "scimark.authorName": {
          "type": "string",
          "default": "",
          "description": "Author name to use in comments (leave empty to use OS username)"
        },
        "scimark.includeTimestampInComments": {
          "type": "boolean",
          "default": true,
          "description": "Include timestamp in comment author attribution (format: username (yyyy-mm-dd hh:mm))"
        },
        "scimark.enableCitekeyLanguageServer": {
          "type": "boolean",
          "default": true,
          "description": "Enable language server features: @ completions, go-to-definition, find references for citation keys, and comment hover."
        },
        "scimark.defaultHighlightColor": {
          "type": "string",
          "enum": [
            "yellow",
            "green",
            "turquoise",
            "pink",
            "blue",
            "red",
            "dark-blue",
            "teal",
            "violet",
            "dark-red",
            "dark-yellow",
            "gray-50",
            "gray-25",
            "black"
          ],
          "default": "yellow",
          "description": "Default background color for ==highlight== formatting when no color is specified"
        },
        "scimark.tableIndent": {
          "type": "integer",
          "default": 2,
          "minimum": 0,
          "description": "Number of spaces per indent level for HTML tables in DOCX to Markdown conversion"
        },
        "scimark.citationKeyFormat": {
          "type": "string",
          "enum": [
            "authorYearTitle",
            "authorYear",
            "numeric"
          ],
          "default": "authorYearTitle",
          "enumDescriptions": [
            "Author surname + year + first title word (e.g., smith2020effects)",
            "Author surname + year (e.g., smith2020)",
            "Sequential numbers (e.g., 1, 2, 3)"
          ],
          "description": "Citation key format for DOCX to Markdown conversion"
        },
        "scimark.blockquoteStyle": {
          "type": "string",
          "enum": [
            "Quote",
            "IntenseQuote",
            "GitHub"
          ],
          "default": "GitHub",
          "description": "Word paragraph style to use for blockquotes when converting Markdown to DOCX"
        },
        "scimark.alwaysUseCommentIds": {
          "type": "boolean",
          "default": false,
          "description": "Always use ID-based comment syntax ({#id}...{/id}{#id>>...<<}) even for non-overlapping comments during DOCX to Markdown conversion"
        },
        "scimark.citekeyReferencesFromMarkdown": {
          "type": "boolean",
          "default": false,
          "description": "Include markdown usages in Find All References when invoked from a markdown file. Off by default because VS Code's built-in Markdown Language Features extension already reports these; enabling this may produce duplicate entries."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./ && bun run copy-csl",
    "copy-csl": "rm -rf out/csl-styles out/csl-locales && cp -R src/csl-styles out/csl-styles && cp -R src/csl-locales out/csl-locales",
    "watch": "tsc -watch -p ./",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf out/",
    "rebuild": "bun run clean && bun run compile",
    "package": "bun run rebuild && bunx vsce package",
    "build:binary": "bun scripts/build-binary.ts binary",
    "build:current": "bun scripts/build-binary.ts current",
    "install-local": "bun run package && code --install-extension scimark-$(node -p \"require('./package.json').version\").vsix --force"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/mocha": "^2.2.42",
    "@types/node": "^22.0.0",
