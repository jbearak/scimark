      {
        "command": "scimark.nextChange",
        "key": "alt+shift+j",
        "when": "editorTextFocus && editorLangId == markdown"
      },
      {
        "command": "scimark.prevChange",
        "key": "alt+shift+k",
        "when": "editorTextFocus && editorLangId == markdown"
      }
